<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.0">

  <CommandSet xml:lang="en-us" Name="myEnglishCommands">

    <CommandPrefix>Alarm Clock</CommandPrefix>

    <Example>Turn alarm (ON/OFF)</Example>

    <Command Name="alarmSetOn">
      <Example>Turn alarm ON</Example>
      <ListenFor>Turn alarm on</ListenFor>
      <Feedback>Turning alarm on</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="alarmSetOff">
      <Example>Turn alarm OFF</Example>
      <ListenFor>Turn alarm off</ListenFor>
      <Feedback>Turning alarm off</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="alarmTimeQuery">
      <Example>When is my alarm set for?</Example>
      <ListenFor>When is my alarm set for?</ListenFor>
      <Feedback>One moment while I check</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

    <Command Name="alarmTimeSet">
      <Example>Set alarm to 7:30 am.</Example>
      <ListenFor>Set alarm to {hour} {minute} {ampm}</ListenFor>
      <Feedback>Setting the alarm clock</Feedback>
      <Navigate Target="MainPage.xaml"/>
    </Command>

